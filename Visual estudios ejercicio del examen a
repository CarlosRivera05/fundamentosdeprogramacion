#include <iostream>
using namespace std;
int main()
{
    float M, N, suma, contador, promedio;
  
        suma = 0;
        do {
            cout << "Ingresar el valor de M: " << endl;
            cin >> M;
        } while (M < 0);
        do {
            cout << "Ingresar el valor de N: " << endl;
            cin >> N;
        } while (N <M );
        contador = M;

            while (contador <= N) {
                suma = suma + contador;//suma=+contador
                    contador = contador + 1;//contador ++

        }
            promedio = suma / (N-M+1);
            cout << "La suma es : " << suma << endl;
            cout << "El promedio es : " << promedio << endl;
            return 0;
}
