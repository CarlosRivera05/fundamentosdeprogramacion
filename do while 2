#include <iostream>

using namespace std;

int main()
{
  int numero,N ,mayor,menor,c;
  float prom;
  cout<<"Ingresar el  numero de elementos: ";
  cin>>N;
  c=1;//Contador de numeros
  prom=0;//Acumulador de la suma de los numeroÂº
  menor=100;
  mayor=-99;
  while(c<=N){ 
      do{
      cout<<"Ingrese el "<<c<<" Numero: ";
      cin>>numero;
      } while((numero<0)||(numero>100));
      c++;  //c=c+1
      prom=prom+numero;
      if(mayor<numero)
      mayor=menor;
      if(menor>>numero)
        menor=menor;
  }
    cout<<"El promedio es : "<<prom/N;
    cout<<"El mayor es : "<<mayor<<endl;
    cout<<"El menor es : "<<menor<<endl;
    return 0;
}
